{
  "parserOptions": {
    "sourceType": "script",
    "ecmaVersion": 8
  },
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "prettier",
  ],
  "plugins": [
    "prettier",
    "node",
  ],
  "rules": {
    "linebreak-style": [ "error", "unix" ],
    "no-console": 0,
    "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": true }],
    "no-undef": 1,
    "camelcase": 1,
    "func-names": [ "error", "never" ],
    "object-curly-spacing": [ "error", "always" ],
    "prettier/prettier": "error"
  }
}
